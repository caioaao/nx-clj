{
    "$schema": "http://json-schema.org/schema",
    "$id": "Package",
    "title": "",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "",
            "minLength": 1,
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What name would you like to use?"
        },
        "main": {
            "type": "string",
            "description": "",
            "minLength": 1,
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What's the main namespace?"
        },
        "root": {
            "type": "string",
            "description": "Path to the project root"
        }
    },
    "required": ["name", "main"]
}
