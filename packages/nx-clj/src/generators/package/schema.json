{
  "$schema": "http://json-schema.org/schema",
  "$id": "Package",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "minLength": 1,
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "projectType": {
      "type": "string",
      "minLength": 1,
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": {
        "message": "What type of project is it?",
        "items": ["library", "app"]
      }
    },
    "root": {
      "type": "string",
      "description": "Path to the project root"
    }
  },
  "required": ["name", "projectType"]
}
